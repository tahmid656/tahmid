<div class="columns mt-6 is-centered">
  <% @entries.each do |entry| %>
    <div class ="column is-one-quarter">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title"><%= entry.fullname %></p>
        </header>
        <div class="card-content">
          <div class="content">
            <p><span class = "has-text-weight-bold">NRIC: </span><%= entry.nric %></p>
            <p><span class = "has-text-weight-bold">Body Temperature: </span><%= entry.body_temp %>Â°C</p>
            <p><span class = "has-text-weight-bold">Date: </span><%= entry.created_at.to_s(:nice_date) %></p>
            <p class="italic">Logged <%= time_ago_in_words(entry.created_at) %> ago</p>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to 'Show', entry, class: "card-footer-item" %>
          <%= link_to 'Edit', edit_entry_path(entry), class: "card-footer-item" %>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
